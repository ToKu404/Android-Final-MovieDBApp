<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="6dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_back_fav"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="1dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/synopsisBlue"
            >
        </View>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_title_fav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cv_favorite"
        app:layout_constraintTop_toTopOf="@id/cv_back_fav"
        app:layout_constraintEnd_toEndOf="@id/cv_back_fav"
        android:text="Kong Skull"
        android:ellipsize="end"
        android:maxLines="2"
        android:elevation="3dp"
        android:textSize="18dp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/white"
        android:layout_margin="11dp"/>
    <RatingBar
        android:id="@+id/rb_favorite"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="12dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/mainBlue"
        android:secondaryProgressTint="@color/mainBlue"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:stepSize="0.01"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_fav"
        app:layout_constraintStart_toStartOf="@id/tv_title_fav"
        android:layout_marginTop="8dp"
        tools:rating="3" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_favorite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="2dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sample_poster"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_fav_icon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:elevation="2dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_back_fav"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainBlue"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_favorite_24"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>